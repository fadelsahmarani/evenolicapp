<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/register_Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.fadel.evenolic.register">

    <TextView
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/register_nowbtn"
        android:layout_alignStart="@+id/register_nowbtn"
        android:text="switch to register as planner"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        />
    <Switch
        android:id="@+id/user_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="Switch"
        android:layout_alignParentRight="true"

        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/clientDiv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:paddingTop="40dp">

        <EditText
            android:id="@+id/firstname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="first name"/>

        <EditText
            android:id="@+id/lastname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="last name"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="email"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="username"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:hint="password"/>
        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:hint="confirm password"/>

        <android.support.v7.widget.CardView
            android:id="@+id/register_btn"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/register_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/plannerDiv"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <EditText
            android:id="@+id/planner_companyname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="company name"/>


        <EditText
            android:id="@+id/planner_name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="planner name"/>

        <EditText
            android:id="@+id/planner_email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="email"/>


        <EditText
            android:id="@+id/planner_username"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="username"/>

        <EditText
            android:id="@+id/planner_password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:hint="password"/>

        <EditText
            android:id="@+id/planner_confirm_password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:hint="confirm password"/>


        <android.support.v7.widget.CardView
            android:id="@+id/planner_register_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_above="@+id/register_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/planner_register_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>
